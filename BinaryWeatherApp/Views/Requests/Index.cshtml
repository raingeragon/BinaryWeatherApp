@model List<BinaryWeatherApp.Models.Request>

@{
	ViewBag.Title = "View";
}
<style type="text/css">
table {
		color: #4F4B79;
	}

	td {
		background: /*#5BF0E8*/ #56DED7;
		font-family: Century;
	}
</style>
<h2>Your Last Requests</h2>

<table class="table">
	<tr>
		<th>
			City Name
		</th>
		<th>
			Request Date
		</th>
		<th>
			Number of Days
		</th>
		<th>
			Temperature
		</th>
		<th>
			Weather
		</th>
		<th></th>
	</tr>

@foreach (var item in Model) {
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.RequestTown)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.RequestDate)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.RequestDays)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.RequestTemp)
		</td>
		<td>
			<img src="@item.RequestImg" height="50" width="50">
		</td>
	</tr>
}

</table>
<h4 align="center"> @Html.ActionLink("Back","Index","Weather") </h4>
